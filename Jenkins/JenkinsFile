pipeline {
    agent none
    stages {
        stage('Install Dependencies') {
            agent {
                    docker {
                         image 'node:sce-mocie-social'
                         args '-p 3000:3001 -u root'
                    }
            }
            steps {
                   sh "yarn install"
            }
        }
        stage('test') {
        
                agent {
                        docker {
                            image 'node:sce-mocie-social'
                            args '-p 3000:3001 -u root'
                        }
                }
                steps {
                    sh "yarn test"
                }
        }
    }
}